{
  "openapi": "3.0.0",
  "info": {
    "title": "Google Drive Connect API",
    "version": "1.0.0",
    "description": "Initiates OAuth 2.0 flow for Google Drive integration"
  },
  "paths": {
    "/api/cloud/google-drive/connect": {
      "post": {
        "summary": "Initiate Google Drive OAuth flow",
        "description": "Generates OAuth authorization URL for user to connect their Google Drive account",
        "operationId": "connectGoogleDrive",
        "tags": ["Cloud Storage"],
        "requestBody": {
          "required": false,
          "description": "No request body required"
        },
        "responses": {
          "200": {
            "description": "OAuth URL generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["authUrl"],
                  "properties": {
                    "authUrl": {
                      "type": "string",
                      "format": "uri",
                      "description": "Google OAuth consent screen URL",
                      "example": "https://accounts.google.com/o/oauth2/v2/auth?client_id=..."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error generating OAuth URL",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          }
        }
      }
    }
  }
}
